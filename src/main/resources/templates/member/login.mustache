{{>layout/header}}

<h1>로그인</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form method="post" action="/login">
            <div class="form-group">
                <label for="title">이메일</label>
                <input type="text" class="form-control"
                       id="email" name="email" placeholder="이메일주소를 입력하세요.">
            </div>

            <div class="form-group">
                <label for="author">비밀번호</label>
                <input type="password" class="form-control"
                       id="password" name="password" placeholder="비밀번호를 입력하세요.">
            </div>
            <button type="submit" class="btn btn-primary" id="btn-login">로그인</button>
            <a href="/" class="btn btn-secondary">취소</a>
        </form>

    </div>
</div>

{{>layout/footer}}